#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["src/BoaEntrega.GSL.Notificacoes/BoaEntrega.GSL.Notificacoes.csproj", "src/BoaEntrega.GSL.Notificacoes/"]
COPY ["src/BoaEntrega.GSL.Core/BoaEntrega.GSL.Core.csproj", "src/BoaEntrega.GSL.Core/"]
RUN dotnet restore "src/BoaEntrega.GSL.Notificacoes/BoaEntrega.GSL.Notificacoes.csproj"
COPY . .
WORKDIR "/src/src/BoaEntrega.GSL.Notificacoes"
RUN dotnet build "BoaEntrega.GSL.Notificacoes.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "BoaEntrega.GSL.Notificacoes.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "BoaEntrega.GSL.Notificacoes.dll"]